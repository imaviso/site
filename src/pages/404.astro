---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="404 - Page Not Found">
  <div class="main-container">
    <Nav />

    <main id="main-content" class="flex-1 flex items-center justify-center py-12 px-8 border-b border-[var(--color-border)] overflow-y-auto min-h-0 custom-scrollbar max-md:py-8 max-md:px-6 max-sm:px-4 relative">
      
      <!-- Scanline effect -->
      <div class="scanline"></div>
      
      <div class="text-center max-w-md">
        
        <!-- Terminal Error Block -->
        <div class="animate-fade-in mb-10">
          <div class="inline-flex items-center gap-3 px-4 py-2 bg-[var(--color-glow)] border border-[var(--color-error)] border-opacity-30 rounded-sm">
            <span class="w-2 h-2 rounded-full bg-[var(--color-error)] animate-pulse-subtle"></span>
            <span class="font-[var(--font-mono)] text-[0.75rem] text-[var(--color-error)] uppercase tracking-wider">
              Error: path not found
            </span>
          </div>
        </div>

        <!-- Big 404 with glitch effect -->
        <div class="animate-scale-in animation-delay-100 relative">
          <h1 
            class="font-[var(--font-mono)] text-[8rem] font-normal leading-[1] text-[var(--color-fg)] tracking-[-0.05em] max-md:text-[6rem] max-sm:text-[4rem] select-none error-number"
          >
            404
          </h1>
          
          <!-- Decorative line -->
          <div class="absolute left-1/2 -translate-x-1/2 -bottom-2 w-24 h-px bg-gradient-to-r from-transparent via-[var(--color-border)] to-transparent"></div>
        </div>
        
        <!-- Description -->
        <div class="mt-8 animate-fade-in-up animation-delay-300">
          <p class="text-[0.9rem] text-[var(--color-muted)] leading-[1.7] font-[var(--font-mono)] max-md:text-[0.85rem]">
            The page you're looking for doesn't exist or has been moved.
          </p>
        </div>

        <!-- Terminal suggestion -->
        <div class="mt-8 animate-fade-in animation-delay-500">
          <div class="inline-block text-left">
            <div class="terminal-prompt">
              <span class="user">visitor</span>
              <span class="separator">@</span>
              <span class="user">imaviso.com</span>
              <span class="separator">:</span>
              <span class="path">~</span>
              <span class="separator">$</span>
              <span class="command ml-1">cd /</span>
            </div>
          </div>
        </div>

        <!-- Action Button -->
        <div class="mt-10 animate-fade-in-up animation-delay-600">
          <a 
            href="/" 
            class="bracket-card inline-flex items-center gap-3 px-6 py-3 border border-[var(--color-border)] text-[var(--color-fg)] font-[var(--font-mono)] text-[0.85rem] no-underline transition-all duration-200 group"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform duration-200 group-hover:-translate-x-1">
              <path d="m12 19-7-7 7-7"/>
              <path d="M19 12H5"/>
            </svg>
            <span>Return Home</span>
          </a>
        </div>

      </div>
    </main>

    <Footer />
  </div>
</Layout>

<style>
  .error-number {
    text-shadow: 
      0 0 80px rgba(255, 107, 107, 0.1),
      0 0 40px rgba(255, 107, 107, 0.05);
  }
  
  .error-number:hover {
    animation: glitch 0.3s ease-in-out;
  }
  
  @keyframes glitch {
    0% {
      transform: translate(0);
      text-shadow: 0 0 80px rgba(255, 107, 107, 0.1);
    }
    20% {
      transform: translate(-3px, 3px);
      text-shadow: 3px 0 rgba(255, 107, 107, 0.4), -3px 0 rgba(100, 200, 255, 0.4);
    }
    40% {
      transform: translate(-3px, -3px);
      text-shadow: -3px 0 rgba(255, 107, 107, 0.4), 3px 0 rgba(100, 200, 255, 0.4);
    }
    60% {
      transform: translate(3px, 3px);
      text-shadow: 3px 0 rgba(100, 200, 255, 0.4), -3px 0 rgba(255, 107, 107, 0.4);
    }
    80% {
      transform: translate(3px, -3px);
      text-shadow: -3px 0 rgba(100, 200, 255, 0.4), 3px 0 rgba(255, 107, 107, 0.4);
    }
    100% {
      transform: translate(0);
      text-shadow: 0 0 80px rgba(255, 107, 107, 0.1);
    }
  }
</style>
