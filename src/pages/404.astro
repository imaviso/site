---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="404 - Page Not Found">
  <div class="w-[1000px] max-lg:w-full h-screen flex flex-col border-x border-[var(--color-border)] max-lg:border-x-0 relative overflow-hidden">
    <Nav />

    <main id="main-content" class="flex-1 flex items-center justify-center py-12 px-8 border-b border-[var(--color-border)] overflow-y-auto min-h-0 custom-scrollbar max-md:py-8 max-md:px-4">
      <div class="text-center animate-fade-in">
        
        <!-- Terminal Error Style -->
        <div class="mb-6 font-[var(--font-mono)] text-[0.8rem] text-[var(--color-muted)]">
          <span class="text-red-500">ERROR</span>
          <span class="text-[var(--color-muted)]">:</span>
          <span class="ml-1">path not found</span>
        </div>

        <h1 class="font-[var(--font-mono)] text-[6rem] font-normal leading-[1] mb-4 text-[var(--color-fg)] tracking-[-0.02em] max-md:text-[4rem]">404</h1>
        
        <p class="text-[1rem] text-[var(--color-muted)] mb-8 leading-[1.6] font-[var(--font-mono)] max-md:text-[0.9rem]">
          The page you're looking for doesn't exist.
        </p>

        <a 
          href="/" 
          class="bracket-card inline-flex items-center gap-2 px-6 py-3 border border-[var(--color-border)] text-[var(--color-fg)] font-[var(--font-mono)] text-[0.9rem] no-underline hover:border-[var(--color-fg)] transition-all duration-200 group bg-[var(--color-bg)]"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform duration-200 group-hover:-translate-x-1">
            <path d="m12 19-7-7 7-7"/>
            <path d="M19 12H5"/>
          </svg>
          <span>Go back home</span>
        </a>

      </div>
    </main>

    <Footer />
  </div>
</Layout>
