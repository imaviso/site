---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="imaviso">
  <div class="w-[1000px] max-lg:w-full h-screen flex flex-col border-x border-[var(--color-border)] max-lg:border-x-0 relative overflow-hidden">
    <Nav currentPath="/" />

    <main id="main-content" class="flex-1 flex py-12 px-8 border-b border-[var(--color-border)] overflow-y-auto min-h-0 custom-scrollbar max-md:py-8 max-md:px-4">
      <div class="w-full">

        <!-- Terminal Prompt Decoration -->
        <div class="animate-fade-in mb-6">
          <div class="font-[var(--font-mono)] text-[0.8rem] text-[var(--color-muted)] flex items-center gap-1">
            <span class="text-[var(--color-accent)]">visitor</span>
            <span class="text-[var(--color-fg)]">@</span>
            <span class="text-[var(--color-accent)]">imaviso.com<span>
            <span class="text-[var(--color-muted)]">:</span>
            <span class="text-[var(--color-muted)]">~</span>
            <span class="text-[var(--color-fg)]">$</span>
            <span class="ml-1">cat about.txt</span>
          </div>
        </div>

        <!-- Typewriter Headline -->
        <div class="animate-fade-in animation-delay-100">
          <div class="typewriter-container mb-4">
            <h1 class="typewriter font-[var(--font-mono)] text-[2.5rem] font-normal leading-[1.2] text-[var(--color-fg)] tracking-[-0.02em] max-md:text-[1.75rem] max-[480px]:text-2xl">Hello, I'm imaviso.</h1>
          </div>
        </div>

        <!-- Section Divider -->
        <div class="section-divider animation-delay-300 animate-fade-in">
          <span>// about</span>
        </div>

        <!-- Description -->
        <div class="animate-fade-in animation-delay-500">
          <p class="text-[0.9rem] text-[var(--color-muted)] mb-6 leading-[1.6] max-w-[600px] font-[var(--font-mono)] max-md:text-[0.85rem]">
          I'm a software engineer passionate about building robust, maintainable systems and exploring innovative technologies. I specialize in full-stack development and reproducible system configurations. Currently working with <a href="https://nixos.org" class="text-[var(--color-fg)] no-underline border-b border-[var(--color-fg)] transition-all duration-200 cursor-pointer hover:opacity-70 hover:border-opacity-70">NixOS</a> to create declarative development environments.
          </p>
        </div>

      </div>
    </main>

    <Footer />
  </div>
</Layout>
