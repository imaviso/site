---
import "../styles/global.css";

interface Props {
  title: string;
  preloadImage?: string;
}

const { title, preloadImage } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Software engineer specializing in full-stack development and system architecture. Building robust applications with modern technologies." />
    <title>{title}</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">
    {preloadImage && <link rel="preload" as="image" href={preloadImage} />}
    <style>
      @font-face {
        font-family: "JetBrains Mono", monospace;
        font-weight: 400;
        font-style:  normal;
        font-display: swap;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
